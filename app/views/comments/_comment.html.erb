 <div id="<%= dom_id(comment) %>" class="well">
    <p>Comment Body: <%= comment.body %></p>
    <p>Creator: <%= link_to comment.user.full_name, user_path(comment.user) %></p>
    <p>Created : <%= time_ago_in_words(comment.created_at) %> ago</p>

    <% if current_user == comment.user %>
      <p>
        <%= link_to "Edit", edit_idea_comment_path(@idea, comment), class: "btn btn-info btn-sm" %>
        <%= link_to "Delete", idea_comment_path(@idea, comment), remote: true, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-warning btn-sm" %>
      </p>
    <% end %>
  </div>
